<!--include header-->
<%-include('include/_header')%>
<!--/include header-->

<!--Main Site-->
<main id="site-main">
  <div class="box-nav d-flex-justify-between">
    <div class="filter">
      <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
    </div>
  </div>
  <div class="form-title text-center">
    <h2 class="text-dark">Update User</h2>
    <span class="text-light">Use the below form to Update an account</span>
  </div>

  <!--update user form-->
  <form action="/" method="POST" id="update_user">
    <div class="new_user">
      <div class="form-group">
        <label for="name" class="text-light">Name</label>
        <input type="hidden" name="_id" value="<%= user._id %>" />
        <input
          type="text"
          id="name"
          name="name"
          value="<%= user.name %>"
          placeholder="Diego Veloso"
        />
      </div>
      <div class="form-group">
        <label for="Email" class="text-light">Email</label>
        <input
          type="text"
          id="email"
          name="email"
          value="<%= user.email %>"
          placeholder="example@mail.com"
        />
      </div>
      <div class="form-group">
        <label for="gender" class="text-light">Gender</label>
        <div class="radio inline">
          <input type="radio" id="radio-2" name="gender" value="Male" <%=
          user.gender == 'Male' ? 'checked' : ''%> >
          <label for="radio-2" class="radio-label">Male</label>
        </div>
        <div class="radio inline">
          <input type="radio" id="radio-3" name="gender" value="Female" <%=
          user.gender == 'Female' ? 'checked' : ''%>>
          <label for="radio-3" class="radio-label">Female</label>
        </div>
      </div>

      <div class="form-group">
        <label for="gender" class="text-light">Status</label>
        <div class="radio inline">
          <input type="radio" id="radio-4" name="status" value="Active" <%=
          user.status == 'Active' ? 'checked' : ''%>>
          <label for="radio-4" class="radio-label">Active</label>
        </div>
        <div class="radio inline">
          <input type="radio" id="radio-5" name="status" value="Inactive" <%=
          user.status == 'Inactive' ? 'checked' : ''%>>
          <label for="radio-5" class="radio-label">Inactive</label>
        </div>
      </div>

      <div class="form-group">
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#updateUserModal"
        >
          Update
        </button>

        <!-- Modal -->
        <div
          class="modal fade"
          id="updateUserModal"
          tabindex="-1"
          aria-labelledby="updateUserModal"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="updateUserModal">
                  Update user Confirm
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">Are you sure you want to update user?</div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="button" onclick ="updateUser(document.getElementById('update_user'));" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmModal">Confirm</button>
              </div>
            </div>
          </div>
        </div>
        <!--Modal Success-->
        <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModallLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">User Updated</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-footer">
                </div>
              </div>
            </div>
          </div>
      
      </div>
    </div>
  </form>
</main>
<!-- /Main Site-->

<!--include footer-->
<%-include('include/_footer')%>
<!--/include footer-->

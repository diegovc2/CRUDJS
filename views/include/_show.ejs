<% for(var i=0; i<users.length; i++) { %>

<tr>
    <td><%=  i+1%></td>
    <td><%=  users[i].name%></td>
    <td><%=  users[i].email%></td>
    <td><%=  users[i].gender%></td>
    <td><%=  users[i].status%></td>
    <td>
        <a href="/update-user?id=<%=  users[i]._id%>" class="btn border-shadow update">
        <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
        </a>

        <a  class="btn border-shadow delete" 
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#deleteUserModal" >
            <span class="text-gradient"><i class="fas fa-times"></i></span>
        </a>

        <!-- Modal -->
        <div
          class="modal fade"
          id="deleteUserModal"
          tabindex="-1"
          aria-labelledby="deleteUserModal"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="deleteUserModal">
                  Delete user Confirm
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">Are you sure you want to delete user?</div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="button" id="deleteBtn" onClick= "deleteUser();" data-id="<%=  users[i]._id%>" class="btn btn-primary">Confirm</button>
              </div>
            </div>
          </div>
        </div>
    </td>
</tr>
<% }%>